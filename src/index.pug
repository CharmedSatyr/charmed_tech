doctype html
html(lang='en')
    head
        meta(charset="UTF-8", name='viewport', content='width=device-width, initial-scale=1', title='Charmed Tech')
        //- inject:css
        //- {{name}}:{{ext}}
        //- endinject
    body
        div.navbar
            a(href='#home') Home
            span &nbsp;
            a(href='#projects') Projects
            span &nbsp;
            a(href='#contact') Contact
        noscript
            div#ns Please enable Javascript. This site will not function properly without it.
        div#home.top-section
            div.contents
                div.sub-title Welcome to
                div.main-title
                    span.charmed Charmed
                    br
                    span.tech Tech
                br
                div.buttons
                    a(href='https://github.com/CharmedSatyr')
                        i.fa.fa-github(aria-hidden: 'false' title='Read my code on GitHub!')
                    a(href='https://twitter.com/CharmedSatyr')
                        i.fa.fa-twitter(aria-hidden: 'false' title='Tweet me @CharmedSatyr')
        div#projects.middle-section
            - var recipe_box = { title: 'Recipe Box', description: "Made with React.js, React Bootstrap, and oodles of SCSS. Add your own recipes and style the instructions to your taste! Recipes will stick around until you clear your browser's cache.", url: '#', img: 'img/recipe_box-750x500.png' }
            - var testy = { title: 'testy', description: 'testy2', url: '#', img: '#' }
            - var markdown_previewer = { title: 'Markdown Language Previewer', description: 'Test your Markdown Language skills with this React.js Markdown Previewer! Using the Marked Library with custom options, this website is an asset for anyone who wants to preview their GitHub-flavored markup before posting documents online.', url: 'https://charmedsatyr.github.io/markdown_previewer', img: 'img/markdown_previewer-750x500.png' }
            - var simon_game = { title: 'Simon Game', description: "This digital remake of Milton Bradley's classic 1978 memory game is made with jQuery and pure Sass. Strict mode is unforgiving, and the game speeds up as you progress. Score 20 points to win!", url: 'https://charmedsatyr.github.io/simon_game', img: 'img/simon_game-750x500.png' }
            - var freecodecamp = { title: 'freeCodeCamp', description: "I am currently learning Full Stack JavaScript Development with freeCodeCamp! I've already earned their Front End Development Certificate, and I expect to complete their Back End Development Certificate by June 2017. You can view my official certificate, 50+ algorithm solutions, and project links at my freeCodeCamp profile page.", url: 'https://freecodecamp.com/charmedsatyr', img: 'img/freecodecamp-750x500.png' }
            - var wikipedia_viewer = { title: 'Wikipedia Viewer', description: "Type your query to automagically search the entire Wikipedia API for articles. If you're up for an adventure, try clicking Random and probe an obscure branch of human knowledge.", url: 'https://charmedsatyr.github.io/wikipedia_viewer', img: 'img/wikipedia_viewer-750x500.png' }
            - var google_entrepreneurs = { title: 'See my other projects!', description: "My first hackathon was a Google Startup Weekend, and my team won First Prize! Check out my development site to see other projects I've worked on, read my code on GitHub, or follow me on Twitter to see what I'm up to now!", url: 'https://charmedsatyr.com', img: 'img/google_entrepreneurs.jpg' }
            each val in [recipe_box, markdown_previewer, simon_game, freecodecamp, wikipedia_viewer, google_entrepreneurs]
                div#container
                    div.text
                        a(href=`${val.url}`)
                            h2 #{val.title}
                        p #{val.description}
                    div.thumbnail
                        a(href=`${val.url}`)
                            img(src=`${val.img}`)
        // Contact
        div.bottom-section#contact
            div.contents
                h3 Send me a message 
                    i.fa.fa-send
                div
                    form(method="post" action="contact.php")
                        div Name
                            span.error *
                        div#nameError.error
                        input#nameEntry(type="text" name="nameEntry")
                        div Email
                            span.error *
                        div#emailError.error
                        input#emailEntry(type="text" name="emailEntry")
                        div Website
                        div#websiteError.error
                        input#websiteEntry(type="text" name="websiteEntry")
                        div Subject
                            span.error *
                        div#subjectError.error
                        input#subjectEntry(type="text" name="subjectEntry")
                        div Message
                            span.error *
                        div#messageError.error
                        textarea#messageEntry(type="text" rows='8' name="messageEntry")
                        br
                        div#submit(type="submit" value="Submit" class='submit') Submit
                        input#submitReal(type="submit" value="Real")
        //- inject:js
        //- {{name}}.{{ext}}
        //- endinject
